{% extends "main.html.twig" %}

{% block title %}{{ 'devices.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ 'devices.label'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex flex-wrap mt-n2">
                            <div class="flex-fill mt-2">
                                <form class="row row-cols-lg-auto g-1 align-items-center" method="get">
                                    <div class="col">
                                        <select name="room" id="room" class="form-select form-select-sm" data-trigger="submit">
                                            <option value="">{{ 'label.choose.room'|trans }}</option>
                                            {% for category in categories %}
                                                <optgroup label="{{ category.name }}">
                                                    {% for r in category.rooms %}
                                                        <option value="{{ r.uuid.toString }}" {% if room is not null and r.id == room.id %}selected{% endif %}>{{ r.name }}</option>
                                                    {% endfor %}
                                                </optgroup>
                                            {% endfor %}
                                        </select>
                                    </div>

                                    <div class="col">
                                        <div class="col">
                                            <select name="dt" id="dt" class="form-select form-select-sm" data-trigger="submit">
                                                <option value="">{{ 'label.choose.devicetype'|trans }}</option>
                                                {% for t in deviceTypes %}
                                                    <option value="{{ t.uuid }}" {% if deviceType is not null and t.id == deviceType.id %}selected{% endif %}>{{ t.name }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col">
                                        <input type="text" name="q" class="form-control form-control-sm" id="q" placeholder="{{ 'devices.search'|trans }}" value="{{ q }}">
                                    </div>

                                    <div class="col">
                                        <button type="submit" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-play"></i>
                                        </button>
                                    </div>

                                    {% if room is not null or q is not empty %}
                                        <div class="col">
                                            <a href="{{ path('devices') }}" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-times-circle"></i>
                                            </a>
                                        </div>
                                    {% endif %}
                                </form>
                            </div>
                            <div class="ms-auto mt-2">
                                <a href="{{ path('add_device') }}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus"></i> {{ 'devices.add.label'|trans }}
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <colgroup>
                                <col>
                                <col class="column-lg">
                                <col class="column-lg">
                                <col class="column-sm">
                            </colgroup>

                            <thead>
                            <tr>
                                <th>{{ 'label.name'|trans }}</th>
                                <th>{{ 'label.room'|trans }}</th>
                                <th>{{ 'label.devicetype'|trans }}</th>
                                <th></th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for device in devices %}
                                <tr>
                                    <td class="align-middle">
                                        {{ device.name }}
                                    </td>
                                    <td class="align-middle">
                                        {{ device.room.name }}
                                    </td>
                                    <td class="align-middle">
                                        {{ device.type.name }}
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>

                                            <div class="dropdown-menu dropdown-menu-end">
                                                <a href="{{ path('edit_device', { uuid: device.uuid }) }}" class="dropdown-item">
                                                    <i class="fas fa-edit"></i> {{ 'actions.edit'|trans }}
                                                </a>
                                                <a href="{{ path('remove_device', { uuid: device.uuid }) }}" class="dropdown-item text-danger">
                                                    <i class="fas fa-trash"></i> {{ 'actions.remove'|trans }}
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex">
                            <div class="flex-fill align-self-center">
                                {{ 'devices.count'|trans({'%count%': devices.totalCount}) }}
                            </div>

                            <div class="ms-auto">
                                {% include '@Common/includes/pagination.html.twig' with {
                                    currentFilters: {
                                        room: room != null ? room.uuid : null,
                                        dt: deviceType != null ? deviceType.uuid : null,
                                        q: q
                                    },
                                    currentPage: devices.page,
                                    lastPage: devices.totalPages,
                                    paginationPath: 'devices',
                                    showAlwaysFirstAndLast: true
                                } %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}