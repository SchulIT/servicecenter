{% extends "main.html.twig" %}

{% block title %}{{ 'announcements.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ 'announcements.label'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex flex-wrap mt-n2">
                            <div class="flex-fill mt-2"></div>
                            <div class="ms-auto mt-2">
                                {% if is_granted('ROLE_SUPER_ADMIN') %}
                                    <a href="{{ path('admin_announcements') }}" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-cogs"></i> {{ 'administration.label'|trans }}
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <colgroup>
                                <col />
                                <col class="column-md">
                                <col class="column-md">
                                <col class="column-md">
                                <col class="column-md">
                            </colgroup>

                            <thead>
                            <tr>
                                <th>{{ 'label.title'|trans }}</th>
                                <th>{{ 'label.category'|trans }}</th>
                                <th>{{ 'label.start'|trans }}</th>
                                <th>{{ 'label.end'|trans }}</th>
                                <th>{{ 'label.rooms'|trans }}</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for announcement in announcements %}
                                <tr>
                                    <td class="align-middle">
                                        <a href="{{ path('show_announcement', { uuid: announcement.uuid }) }}">
                                            {{ announcement.title }}
                                        </a>
                                    </td>
                                    <td class="align-middle">{{ announcement.category.name }}</td>
                                    <td class="align-middle">{{ announcement.startDate|format_date }}</td>
                                    <td class="align-middle">
                                        {% if announcement.endDate is null %}
                                            Nie
                                        {% else %}
                                            {{ announcement.endDate|format_date }}
                                        {% endif %}
                                    </td>
                                    <td class="align-middle">{{ announcement.rooms|length }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex">
                            <div class="flex-fill align-self-center">
                                {{ 'announcements.count'|trans({'%count%': announcements.totalCount}) }}
                            </div>

                            <div class="ms-auto">
                                {% include '@Common/includes/pagination.html.twig' with {
                                    currentFilters: { },
                                    currentPage: announcements.page,
                                    lastPage: announcements.totalPages,
                                    paginationPath: 'announcements',
                                    showAlwaysFirstAndLast: true
                                } %}
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock%}