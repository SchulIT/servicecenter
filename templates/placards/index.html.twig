{% extends "main.html.twig" %}

{% block title %}{{ 'placards.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ 'placards.label'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="card">
        <table class="table table-striped table-hover card-table">
            <colgroup>
                <col />
                <col class="column-lg" />
                <col class="column-md" />
            </colgroup>

            <thead>
            <tr>
                <th>{{ 'label.room'|trans }}</th>
                <th>{{ 'label.last_change'|trans }}</th>
                <th>{{ 'actions.label'|trans }}</th>
            </tr>
            </thead>

            <tbody>
            {% for placard in placards %}
            <tr>
                <td class="align-middle"><a href="{{ path('edit_placard', { alias: placard.room.alias }) }}">{{ placard.room }}</a><p>{{ placard.header }}</p></td>
                <td class="align-middle">{{ placard.updatedAt|ago }}</td>
                <td class="align-middle">
                    <div class="dropdown d-inline">
                        <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle" data-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>

                        <div class="dropdown-menu dropdown-menu-right">
                            <a href="{{ path('edit_placard', { alias: placard.room.alias }) }}" class="dropdown-item">
                                <i class="fas fa-edit"></i> {{ 'actions.edit'|trans }}
                            </a>
                            <a href="{{ path('pdf_placard', { alias: placard.room.alias }) }}" class="dropdown-item text-danger">
                                <i class="fas fa-download"></i> {{ 'placards.export'|trans }}
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="buttons">
        <a href="{{ path('add_placard') }}" class="btn btn-primary btn-sm" role="button">
            <i class="fas fa-plus"></i> {{ 'placards.add.label'|trans }}
        </a>
    </div>
{% endblock %}