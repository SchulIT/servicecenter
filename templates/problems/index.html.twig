{% extends "main.html.twig" %}

{% block post_javascript %}
    <script src="{{ asset('build/problems.js') }}"></script>
{% endblock %}

{% block title %}Probleme{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ 'problems.label'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex flex-wrap mt-n2">
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="mt-2 me-2">
                                    <form action="{{ path('admin_problems_bulk') }}" role="form" method="post" class="row row-cols-lg-auto g-1 align-items-center">
                                        <input type="hidden" name="uuids" id="problem-uuids" value="">
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token(csrfTokenBulkId) }}" />
                                        <div class="input-group input-group-sm">
                                            <select class="form-select" id="action" name="action">
                                                <option value="">{{ 'problems.bulk.placeholder'|trans }}</option>
                                                <option value="mark_solved">{{ 'problems.bulk.solved.label'|trans }}</option>
                                                <option value="set_maintenance">{{ 'problems.bulk.maintenance.label'|trans }}</option>
                                                <option value="unset_maintenance">{{ 'problems.bulk.problem.label'|trans }}</option>
                                                <option value="assignee">{{ 'problems.bulk.take.label'|trans }}</option>
                                            </select>
                                            <button type="submit" class="btn btn-outline-primary" title="{{ 'actions.execute'|trans }}"><i class="fa fa-arrow-right"></i></button>
                                        </div>
                                    </form>
                                </div>
                            {% endif %}

                            <div class="flex-fill mt-2">
                                <form class="row row-cols-lg-auto g-1 align-items-center" method="get">
                                    <div class="col">
                                        <select name="room" id="room" class="form-select form-select-sm" data-trigger="submit">
                                            <option value="">{{ 'label.choose.room'|trans }}</option>
                                            {% for category in categories %}
                                                <optgroup label="{{ category.name }}">
                                                    {% for r in category.rooms %}
                                                        <option value="{{ r.uuid.toString }}" {% if room is not null and r.id == room.id %}selected{% endif %}>{{ r.name }}</option>
                                                    {% endfor %}
                                                </optgroup>
                                            {% endfor %}
                                        </select>
                                    </div>

                                    <div class="col">
                                        <input type="text" name="query" class="form-control form-control-sm" id="query" placeholder="{{ 'problems.search.label'|trans }}" value="{{ query }}">
                                    </div>

                                    <div class="col">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="true" id="closed" name="closed" {% if includeClosed %} checked{% endif %}>
                                            <label class="form-check-label" for="closed">
                                                {{ 'label.filter.solvedproblems'|trans }}
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col">
                                        <button type="submit" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>

                                    {% if room is not null or query is not empty or includeClosed %}
                                        <div class="col">
                                            <a href="{{ path('problems') }}" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-times-circle"></i>
                                            </a>
                                        </div>
                                    {% endif %}
                                </form>
                            </div>

                            <div class="ms-auto mt-2">
                                <a href="{{ path('new_problem') }}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus"></i> {{ 'problems.add.label'|trans }}
                                </a>
                            </div>
                        </div>


                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover problems">
                            <colgroup>
                                <col class="column-sm" />
                                <col />
                                <col class="column-md" />
                                <col class="column-md" />
                                <col class="column-lg" />
                            </colgroup>
                            <thead>
                            <tr>
                                <th>
                                    <div class="form-check text-center">
                                        <input id="select-all" class="form-check-input" type="checkbox" data-toggle="select-all" data-select-target="#problem-uuids">
                                    </div>
                                </th>
                                <th>
                                    {{ 'label.problem'|trans }}
                                </th>
                                <th class="hidden-xs hidden-sm">
                                    {{ 'label.priority'|trans }}
                                </th>
                                <th class="hidden-xs hidden-sm">
                                    {{ 'label.status'|trans }}
                                </th>
                                <th>
                                    {{ 'label.last_change'|trans }}
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for problem in problems %}
                                <tr>
                                    <td class="align-middle">
                                        <div class="form-check text-center">
                                            <input id="select-{{ problem.uuid }}" class="form-check-input" type="checkbox" data-toggle="select" data-select-target="#problem-uuids" value="{{ problem.uuid }}">
                                        </div>
                                    </td>
                                    <td class="align-middle">
                                        <a href="{{ path('show_problem', { uuid: problem.uuid }) }}">{{ problem|problem }}</a>

                                        {% if problem.isMaintenance %}
                                            <span class="badge text-bg-secondary">
                                                <i class="fas fa-wrench"></i> {{ 'label.maintenance'|trans }}
                                            </span>
                                        {% endif %}

                                        {% if problem.comments|length > 0 %}
                                            <span class="badge text-bg-secondary" title="{{ 'problems.comments.info'|trans({'%count%': problem.comments|length }) }}">
                                                <i class="fas fa-comments"></i> {{ problem.comments|length }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="hidden-xs hidden-sm align-middle"><span class="badge text-bg-{{ problem.priority|priority_class }}">{{ problem.priority|priority }}</span></td>
                                    <td class="hidden-xs hidden-sm align-middle">
                                        {% if problem.isOpen %}
                                            <span class="badge text-bg-success">
                                                <i class="fas fa-info-circle"></i> {{ 'status.open'|trans }}
                                            </span>
                                                        {% else %}
                                                            <span class="badge text-bg-danger">
                                                <i class="fas fa-check-circle"></i> {{ 'status.closed'|trans }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="align-middle">
                                        {% if problem.updatedAt is not null %}
                                            <span title="{{ problem.updatedAt|format_datetime }}">
                                                {{ problem.updatedAt|ago }}
                                            </span>
                                                    {% else %}
                                                        <span title="{{ problem.createdAt|format_datetime }}">
                                                {{ problem.createdAt|ago }}
                                            </span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex">
                            <div class="flex-fill align-self-center">
                                {{ 'problems.count'|trans({'%count%': problems.totalCount}) }}
                            </div>

                            <div class="ms-auto">
                                {% include '@Common/includes/pagination.html.twig' with {
                                    currentFilters: {
                                        room: room != null ? room.uuid : null,
                                        closed: includeClosed,
                                        query: query
                                    },
                                    currentPage: problems.page,
                                    lastPage: problems.totalPages,
                                    paginationPath: 'problems',
                                    showAlwaysFirstAndLast: true
                                } %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}