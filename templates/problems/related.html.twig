{% extends "main.html.twig" %}

{% block title %}{{ 'problems.related.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('problems') }}">{{ 'problems.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('show_problem', { uuid: problem.uuid }) }}">{{ problem|problem }} {% if problem.isMaintenance %}({{ 'label.maintenance'|trans }}){% endif %}</a></li>
        <li class="breadcrumb-item">{{ block('title') }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex flex-wrap mt-n2">
                            <div class="flex-fill mt-2"></div>

                            <div class="ms-auto mt-2">

                            </div>
                        </div>


                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover problems">
                            <colgroup>
                                <col />
                                <col class="column-md" />
                                <col class="column-md" />
                                <col class="column-lg" />
                            </colgroup>
                            <thead>
                            <tr>
                                <th>
                                    {{ 'label.problem'|trans }}
                                </th>
                                <th class="hidden-xs hidden-sm">
                                    {{ 'label.priority'|trans }}
                                </th>
                                <th class="hidden-xs hidden-sm">
                                    {{ 'label.status'|trans }}
                                </th>
                                <th>
                                    {{ 'label.last_change'|trans }}
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for problem in relatedProblems %}
                                <tr>
                                    <td class="align-middle">
                                        <a href="{{ path('show_problem', { uuid: problem.uuid }) }}">{{ problem|problem }}</a>

                                        {% if problem.isMaintenance %}
                                            <span class="badge text-bg-secondary">
                                                <i class="fas fa-wrench"></i> {{ 'label.maintenance'|trans }}
                                            </span>
                                        {% endif %}

                                        {% if problem.comments|length > 0 %}
                                            <span class="badge text-bg-secondary" title="{{ 'problems.comments.info'|trans({'%count%': problem.comments|length }) }}">
                                                <i class="fas fa-comments"></i> {{ problem.comments|length }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="hidden-xs hidden-sm align-middle"><span class="badge text-bg-{{ problem.priority|priority_class }}">{{ problem.priority|priority }}</span></td>
                                    <td class="hidden-xs hidden-sm align-middle">
                                        {% if problem.isOpen %}
                                            <span class="badge text-bg-success">
                                                <i class="fas fa-info-circle"></i> {{ 'status.open'|trans }}
                                            </span>
                                                        {% else %}
                                                            <span class="badge text-bg-danger">
                                                <i class="fas fa-check-circle"></i> {{ 'status.closed'|trans }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="align-middle">
                                        {% if problem.updatedAt is not null %}
                                            <span title="{{ problem.updatedAt|format_datetime }}">
                                                {{ problem.updatedAt|ago }}
                                            </span>
                                                    {% else %}
                                                        <span title="{{ problem.createdAt|format_datetime }}">
                                                {{ problem.createdAt|ago }}
                                            </span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex">
                            <div class="flex-fill align-self-center">
                                {{ 'problems.count'|trans({'%count%': relatedProblems.totalCount}) }}
                            </div>

                            <div class="ms-auto">
                                {% include '@Common/includes/pagination.html.twig' with {
                                    currentFilters: {
                                        problem: problem.uuid
                                    },
                                    currentPage: relatedProblems.page,
                                    lastPage: relatedProblems.totalPages,
                                    paginationPath: 'related_problems',
                                    showAlwaysFirstAndLast: true
                                } %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}