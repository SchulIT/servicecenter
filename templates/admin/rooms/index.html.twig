{% extends "main.html.twig" %}

{% block title %}{{ 'rooms.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ 'rooms.label'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex flex-wrap mt-n2">
                            <div class="flex-fill mt-2"></div>
                            <div class="ms-auto mt-2">
                                <a href="{{ path('admin_roomcategories') }}" class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-cogs"></i> {{ 'rooms.categories.label'|trans }}
                                </a>

                                <a href="{{ path('add_room') }}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus"></i> {{ 'rooms.add.label'|trans }}
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <colgroup>
                                <col>
                                <col class="column-md">
                                <col class="column-md">
                                <col class="column-sm">
                            </colgroup>

                            <thead>
                            <tr>
                                <th>{{ 'label.name'|trans }}</th>
                                <th>{{ 'label.category'|trans }}</th>
                                <th>{{ 'label.devices'|trans }}</th>
                                <th></th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for room in rooms %}
                                <tr>
                                    <td class="align-middle">{{ room.name }}</td>
                                    <td class="align-middle">{{ room.category.name }}</td>
                                    <td class="align-middle">{{ room.devices.count() }}</td>
                                    <td class="align-middle">
                                        <div class="dropdown">
                                            <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>

                                            <div class="dropdown-menu dropdown-menu-end">
                                                <a href="{{ path('edit_room', { uuid: room.uuid }) }}" class="dropdown-item">
                                                    <i class="fas fa-edit"></i> {{ 'actions.edit'|trans }}
                                                </a>

                                                <a href="{{ path('remove_room', { uuid: room.uuid }) }}" class="dropdown-item text-danger">
                                                    <i class="fas fa-trash"></i> {{ 'actions.remove'|trans }}
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex">
                            <div class="flex-fill align-self-center">
                                {{ 'rooms.count'|trans({'%count%': rooms.totalCount}) }}
                            </div>

                            <div class="ms-auto">
                                {% include '@Common/includes/pagination.html.twig' with {
                                    currentFilters: { },
                                    currentPage: rooms.page,
                                    lastPage: rooms.totalPages,
                                    paginationPath: 'admin_rooms',
                                    showAlwaysFirstAndLast: true
                                } %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock%}