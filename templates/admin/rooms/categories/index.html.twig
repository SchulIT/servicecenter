{% extends "main.html.twig" %}

{% block title %}{{ 'rooms.categories.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item"><a href="{{ path('admin_rooms') }}">{{ 'rooms.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ 'rooms.categories.label'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <table class="table table-striped table-hover table-bordered">
                        <colgroup>
                            <col />
                            <col class="column-md" />
                            <col class="column-md" />
                        </colgroup>

                        <thead>
                        <tr>
                            <th>{{ 'label.name'|trans }}</th>
                            <th>{{ 'label.rooms'|trans }}</th>
                            <th>{{ 'actions.label'|trans }}</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for category in categories %}
                            <tr>
                                <td class="align-middle">{{ category.name }}</td>
                                <td class="align-middle">{{ category.rooms.count() }}</td>
                                <td class="align-middle">
                                    <a href="{{ path('edit_roomcategory', { uuid: category.uuid }) }}" class="btn btn-sm btn-primary" title="{{ 'actions.edit'|trans }}">
                                        <i class="fas fa-edit"></i>
                                    </a>

                                    <a href="{{ path('remove_roomcategory', { uuid: category.uuid }) }}" class="btn btn-sm btn-danger" title="{{ 'actions.remove'|trans }}">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="list-group list-group-flush">
                        <a href="{{ path('add_roomcategory') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus"></i> {{ 'rooms.categories.add.label'|trans }}
                        </a>

                        <a href="{{ path('admin_rooms') }}" class="list-group-item list-group-item-action">
                            <i class="fas fa-arrow-left"></i> {{ 'actions.back'|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock%}