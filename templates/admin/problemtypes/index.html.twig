{% extends "main.html.twig" %}

{% block title %}{{ 'problem_types.label'|trans }}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('dashboard') }}">{{ 'dashboard.label'|trans }}</a></li>
        <li class="breadcrumb-item">{{ 'problem_types.label'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex flex-wrap mt-n2">
                            <div class="flex-fill mt-2">
                                <form class="row row-cols-lg-auto g-1 align-items-center" method="get">
                                    <div class="col">
                                        <select name="dt" id="dt" class="form-select form-select-sm" data-trigger="submit">
                                            <option value="">{{ 'label.choose.devicetype'|trans }}</option>
                                            {% for t in deviceTypes %}
                                                <option value="{{ t.uuid }}" {% if deviceType is not null and t.id == deviceType.id %}selected{% endif %}>{{ t.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>

                                    <div class="col">
                                        <button type="submit" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>

                                    {% if deviceType is not null %}
                                        <div class="col">
                                            <a href="{{ path('devices') }}" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-times-circle"></i>
                                            </a>
                                        </div>
                                    {% endif %}
                                </form>
                            </div>
                            <div class="ms-auto mt-2">
                                <a href="{{ path('add_problemtype') }}" class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus"></i> {{ 'problem_types.add.label'|trans }}
                                </a>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <colgroup>
                                <col>
                                <col class="column-lg">
                                <col class="column-md">
                                <col class="column-sm">
                            </colgroup>

                            <thead>
                            <tr>
                                <th>{{ 'label.name'|trans }}</th>
                                <th>{{ 'label.devicetype'|trans }}</th>
                                <th>{{ 'label.problems'|trans }}</th>
                                <th></th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for type in types %}
                                <tr>
                                    <td class="align-middle">{{ type.name }}</td>
                                    <td class="align-middle">{{ type.devicetype.name }}</td>
                                    <td class="align-middle">{{ type.problems.count() }}</td>
                                    <td class="align-middle">
                                        <div class="dropdown">
                                            <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle" data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>

                                            <div class="dropdown-menu dropdown-menu-end">
                                                <a href="{{ path('edit_problemtype', { uuid: type.uuid }) }}" class="dropdown-item">
                                                    <i class="fas fa-edit"></i> {{ 'actions.edit'|trans }}
                                                </a>

                                                <a href="{{ path('remove_problemtype', { uuid: type.uuid }) }}" class="dropdown-item text-danger">
                                                    <i class="fas fa-trash"></i> {{ 'actions.remove'|trans }}
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex">
                            <div class="flex-fill align-self-center">
                                {{ 'problem_types.count'|trans({'%count%': types.totalCount}) }}
                            </div>

                            <div class="ms-auto">
                                {% include '@Common/includes/pagination.html.twig' with {
                                    currentFilters: { dt: deviceType != null ? deviceType.uuid : null },
                                    currentPage: types.page,
                                    lastPage: types.totalPages,
                                    paginationPath: 'admin_problemtypes',
                                    showAlwaysFirstAndLast: true
                                } %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock%}