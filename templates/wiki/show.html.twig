{% extends "main.html.twig" %}

{% block title %}{% if article is not null %}{{ article.name }}{% else %}{{ 'wiki.label'|trans }}{% endif %}{% endblock %}

{% block breadcrumb %}
    {% include 'wiki/breadcrumb.html.twig' with { item: article } only %}
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header border-bottom-0">
                        <div class="d-flex flex-wrap mt-n2">
                            <div class="flex-fill mt-2">
                                <form action="{{ path('wiki_search') }}" method="get" class="row row-cols-lg-auto g-1 align-items-center">
                                    <div class="col">
                                        <input type="text" name="query" class="form-control form-control-sm" id="query" placeholder="{{ 'wiki.search.label'|trans }}" value="">
                                    </div>
                                    <div class="col">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                            <div class="ms-auto mt-2">
                                {% if article is not null %}
                                    {% if is_granted('edit', article) %}
                                        <a href="{{ path('edit_wiki_article', { uuid: article.uuid }) }}" class="btn btn-outline-primary btn-sm" role="button">
                                            <i class="fas fa-edit"></i> {{ 'wiki.articles.edit.label'|trans }}
                                        </a>
                                    {% endif %}

                                    {% if is_granted('remove', article) %}
                                        <a href="{{ path('remove_wiki_article', { uuid: article.uuid }) }}" class="btn btn-outline-danger btn-sm" role="button">
                                            <i class="fas fa-trash"></i> {{ 'wiki.articles.remove.label'|trans }}
                                        </a>
                                    {% endif %}

                                    {% if is_granted('add') %}
                                        <a href="{{ path('add_wiki_article', { uuid: article.uuid }) }}" class="btn btn-primary btn-sm">
                                            <i class="fa fa-plus"></i> {{ 'wiki.articles.add.label'|trans }}
                                        </a>
                                    {% endif %}
                                {% else %}
                                    {% if is_granted('add') %}
                                        <a href="{{ path('add_wiki_root_article') }}" class="btn btn-primary btn-sm">
                                            <i class="fa fa-plus"></i> {{ 'wiki.articles.add.label'|trans }}
                                        </a>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    {% if article is not null %}
                    <div class="card-body">
                        <div class="container-fluid">
                            <div class="row row-cols-lg-5 row-cols-md-2 row-cols-1">
                                <div class="col">
                                    <dt class="text-uppercase text-muted">{{ 'label.created'|trans }}</dt>
                                    <dd><span title="{{ article.createdAt|format_datetime }}">{{ article.createdAt|ago }}</span></dd>
                                </div>

                                <div class="col">
                                    <dt class="text-uppercase text-muted">{{ 'label.updated'|trans }}</dt>
                                    <dd>
                                        {% if article.updatedAt is null %}{{ 'label.never'|trans }}{% else %}<span title="{{ article.updatedAt|format_datetime }}">{{ article.updatedAt|ago }}</span>{% endif %}
                                    </dd>
                                </div>

                                <div class="col">
                                    <dt class="text-uppercase text-muted">{{ 'label.author'|trans }}</dt>
                                    <dd>{{ article.createdBy }}</dd>
                                </div>

                                <div class="col">
                                    <dt class="text-uppercase text-muted">{{ 'label.updateauthor'|trans }}</dt>
                                    <dd>
                                        {% if article.updatedBy is null %}{{ 'label.nobody'|trans }}{% else %}{{ article.updatedBy }}{% endif %}
                                    </dd>
                                </div>

                                <div class="col">
                                    <dt class="text-uppercase text-muted">{{ 'label.access'|trans }}</dt>
                                    <dd>
                                        {{ article.access|access_level }}
                                    </dd>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>


                {% if article is not null %}
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.name }}</h5>

                            {{ article.content|markdown }}
                        </div>
                    </div>
                {% endif %}

                <div class="row" data-masonry='{"percentPosition": true }'>
                    {% for child in childrenWithChildren %}
                    <div class="col-sm-6 col-lg-4">
                        <div class="card">
                            <div class="card-header">
                                <a href="{{ path('wiki_article', { uuid: child.uuid }) }}">
                                    <i class="far fa-copy"></i> {{ child.name }}
                                </a>
                            </div>
                            <div class="list-group list-group-flush">
                                {% for c in child.children %}
                                    {% if is_granted('view', c) %}
                                        <a href="{{ path('wiki_article', { uuid: c.uuid }) }}" class="list-group-item list-group-item-action">{{ c.name }}</a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% endfor %}

                    {% if childrenWithoutChildren|length > 0 %}
                    <div class="col-sm-6 col-lg-4">
                        <div class="card">
                            <div class="card-header"><i class="far fa-copy"></i> {{ 'wiki.more_articles'|trans }}</div>

                            <div class="list-group list-group-flush">
                                {% for c in childrenWithoutChildren %}
                                    {% if is_granted('view', c) %}
                                        <a href="{{ path('wiki_article', { uuid: c.uuid }) }}" class="list-group-item list-group-item-action">{{ c.name }}</a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
