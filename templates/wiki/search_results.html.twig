{% extends "main.html.twig" %}

{% block title %}{{ 'wiki.search.results'|trans }}{% endblock %}

{% block breadcrumb %}
    {% include 'wiki/breadcrumb.html.twig' with { item: null } only %}
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header">
                        {{ 'wiki.search.results'|trans }} <span class="badge badge-primary">{{ result.count }}</span>
                    </div>

                    <table class="table table-striped table-hover table-bordered">
                        <colgroup>
                            <col />
                            <col class="column-lg" />
                        </colgroup>

                        <thead>
                        <tr>
                            <th>{{ 'label.name'|trans }}</th>
                            <th>{{ 'label.category'|trans }}</th>
                        </tr>
                        </thead>

                        <tbody>
                        {% for article in result.articles %}
                            <tr>
                                <td>
                                    <a href="{{ path('wiki_article', { id: article.id, slug: article.slug }) }}">
                                        {{ article.name }}
                                    </a>
                                </td>
                                <td>
                                    {% if article.category != null %}
                                        <a href="{{ path('wiki_category', { id: article.category.id, slug: article.category.slug }) }}">
                                            {{ article.category.name }}
                                        </a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                {% include '@Common/includes/pagination.html.twig' with {
                    currentFilters: { q: q },
                    currentPage: result.page,
                    paginationPath: 'wiki_search',
                    lastPage: result.pages,
                    showAlwaysFirstAndLast: true
                } only %}
            </div>

            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <form role="form" method="get" action="{{ path('wiki_search') }}">
                            <div class="input-group">
                                <input type="text" name="q" class="form-control" id="q" placeholder="{{ 'wiki.search.label'|trans }}" value="{{ q }}">
                                <div class="input-group-append">
                                    <button type="submit" class="btn btn-outline-primary">
                                        <i class="fa fa-search"></i>
                                    </button>
                                    <a href="{{ path('wiki') }}" class="btn btn-outline-primary" title="{{ 'wiki.search.close'|trans }}">
                                        <i class="fa fa-times"></i>
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}