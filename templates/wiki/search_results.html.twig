{% extends "main.html.twig" %}

{% block title %}{{ 'wiki.search.results'|trans }}{% endblock %}

{% block breadcrumb %}
    {% include 'wiki/breadcrumb.html.twig' with { item: null } only %}
{% endblock %}

{% block content %}
    <div class="container-fluid px-0">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex flex-wrap mt-n2">
                            <div class="flex-fill mt-2">
                                <form action="{{ path('wiki_search') }}" method="get" class="row row-cols-lg-auto g-1 align-items-center">
                                    <div class="col">
                                        <input type="text" name="query" class="form-control form-control-sm" id="query" placeholder="{{ 'wiki.search.label'|trans }}" value="{{ query }}">
                                    </div>
                                    <div class="col">
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover card-table">
                            <colgroup>
                                <col />
                                <col class="column-lg" />
                            </colgroup>

                            <thead>
                            <tr>
                                <th>{{ 'label.name'|trans }}</th>
                                <th>{{ 'label.category'|trans }}</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for article in result %}
                                <tr>
                                    <td>
                                        <a href="{{ path('wiki_article', { uuid: article.uuid }) }}">
                                            {{ article.name }}
                                        </a>
                                    </td>
                                    <td>
                                        {% if article.parent != null %}
                                            <a href="{{ path('wiki_article', { uuid: article.parent.uuid }) }}">
                                                {{ article.parent.name }}
                                            </a>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer">
                        <div class="d-flex">
                            <div class="flex-fill align-self-center">
                                {{ 'wiki.search.results_info'|trans({'%count%': result.totalCount}) }}
                            </div>

                            <div class="ms-auto">
                                {% include '@Common/includes/pagination.html.twig' with {
                                    currentFilters: {
                                        query: query
                                    },
                                    currentPage: result.page,
                                    lastPage: result.totalPages,
                                    paginationPath: 'wiki_search',
                                    showAlwaysFirstAndLast: true
                                } %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}