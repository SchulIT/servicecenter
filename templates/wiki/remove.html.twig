{% extends "main.html.twig" %}

{% block title %}{{ 'wiki.articles.remove.label'|trans }}{% endblock %}

{% block breadcrumb %}
    {% include 'wiki/breadcrumb.html.twig' with { item: article, append: block('title') } only %}
{% endblock %}

{% block content %}
    {{ form_start(form) }}

    <div class="card border-danger">
        <div class="card-header bg-danger text-white">{{ 'confirm.remove.label'|trans }}</div>

        <div class="card-body">
            {{ form_widget(form.group_general.confirm) }}
        </div>
    </div>

    <div class="buttons">
        <button type="submit" class="btn btn-sm btn-danger">
            <i class="fas fa-trash"></i> {{ 'actions.remove'|trans }}
        </button>

        {% if article.parent is null %}
            <a href="{{ path('wiki') }}" class="btn btn-sm btn-secondary">
                {{ 'actions.cancel'|trans }}
            </a>
        {% else %}
            <a href="{{ path('wiki_article', { uuid: article.parent.uuid }) }}" class="btn btn-sm btn-secondary">
                {{ 'actions.cancel'|trans }}
            </a>
        {% endif %}
    </div>
    {{ form_end(form) }}


{% endblock %}